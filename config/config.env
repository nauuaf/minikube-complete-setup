# SRE Assignment Configuration - Ubuntu/Linux Optimized
# System Configuration
CLUSTER_NAME="sre-assignment"
# Increased resources for better performance on Linux
MEMORY="8192"
CPUS="4"
DISK_SIZE="40g"

# Service Versions
API_VERSION="1.0.0"
AUTH_VERSION="1.0.0"
IMAGE_VERSION="1.0.0"
FRONTEND_VERSION="1.0.0"

# Registry Configuration - Works natively on Linux
REGISTRY_PORT="30500"
REGISTRY_UI_PORT="30501"
REGISTRY_USER="admin"
REGISTRY_PASS="SecurePass123!"
# Registry push will work properly on Linux (no Docker Desktop issues)

# Namespaces
NAMESPACE_PROD="production"
NAMESPACE_MONITORING="monitoring"

# Resource Limits
CPU_REQUEST="100m"
CPU_LIMIT="500m"
MEMORY_REQUEST="128Mi"
MEMORY_LIMIT="512Mi"

# HPA Configuration
HPA_MIN_REPLICAS="2"
HPA_MAX_REPLICAS="5"
HPA_CPU_THRESHOLD="70"

# Service Ports
API_NODEPORT="30001"
AUTH_NODEPORT="30002"
IMAGE_NODEPORT="30003"
FRONTEND_NODEPORT="30004"
PROMETHEUS_NODEPORT="30090"
GRAFANA_NODEPORT="30030"

# Monitoring
GRAFANA_ADMIN_PASSWORD="admin123"
PROMETHEUS_RETENTION="7d"

# TLS Configuration (Let's Encrypt staging for demo)
LETSENCRYPT_EMAIL="admin@sre-assignment.local"
LETSENCRYPT_STAGING="true"

# Test Configuration
TEST_OUTPUT_DIR="tests/test-results"
SCREENSHOT_ENABLED="true"