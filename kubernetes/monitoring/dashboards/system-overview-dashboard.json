{
  "dashboard": {
    "id": null,
    "title": "System Overview Dashboard",
    "tags": ["overview", "system"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Service Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\".*-service\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "gridPos": {"h": 6, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Total Requests per Service",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m])) by (service)",
            "legendFormat": "{{service}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6}
      },
      {
        "id": 3,
        "title": "Pod Count by Service",
        "type": "stat",
        "targets": [
          {
            "expr": "count(kube_pod_info{namespace=\"production\"}) by (created_by_name)",
            "legendFormat": "{{created_by_name}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 6}
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "timepicker": {},
    "templating": {"list": []},
    "annotations": {"list": []},
    "refresh": "5s",
    "schemaVersion": 16,
    "version": 1
  }
}